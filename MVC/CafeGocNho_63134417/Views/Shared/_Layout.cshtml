<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Goc Nho Coffee</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 flex flex-col min-h-screen">
    <nav class="bg-black bg-opacity-70 text-white h-20">
        <div class="container mx-auto flex items-center justify-between h-full">
            <!-- Left-aligned navigation links -->
            <div class="flex items-center space-x-8">
                @Html.ActionLink("Bàn", "Index", "BANs_63134417", null, new { @class = "hover:text-yellow-500" })
                @Html.ActionLink("Menu", "Index", "MENUs_63134417", null, new { @class = "hover:text-yellow-500" })
                
            </div>

            <!-- Centered logo -->
            <div class="absolute left-1/2 transform -translate-x-1/2">
                <a href="#">
                    <img src="~/Images/logo.png" alt="Logo" class="h-16 rounded-full">
                </a>
            </div>

            <div class="flex space-x-4">
                @if (Session["Role"] != null)
                {
                    if (Session["Role"].ToString() == "True") // Kiểm tra xem có phải là admin không
                    {
                        <!-- Kiểm tra nếu là admin thì hiện nút "Thống kê" -->
                        @Html.ActionLink("Thống kê", "ThongKe", "ThongKeController", null, new { @class = "hover:text-yellow-500" })
                        <span class="">Quản Lí: @Session["Ten"]</span>
                    }
                    else
                    {
                        <span class="">Nhân Viên: @Session["Ten"]</span>
                    }
                }
                else
                {
                    <a href="@Url.Action("DangNhap", "ADMINs_63134417")" class="hover:text-yellow-500 mt-1">Đăng nhập</a>
                }
            </div>

        </div>

        <!-- Bottom border (divider) -->
        <hr class="border-t border-gray-700">
    </nav>

    <div class="flex-grow mx-20 py-2">
        <!-- Your page content goes here -->
        @RenderBody()
    </div>

    <footer class="bg-black bg-opacity-70 text-white flex justify-around h-6">
        <div>
            &copy; @DateTime.Now.Year - Goc Nho Coffee
            <a href="https://github.com/PCHaiLam/CSharp/tree/main/MVC/CafeGocNho_63134417" target="_blank" class="hover:text-yellow-500">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline" fill="currentColor" viewBox="0 0 24 24">
